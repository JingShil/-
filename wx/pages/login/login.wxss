/* login.wxss */
.page{
  padding-top: 20rpx;
  height:100vh;
  background: linear-gradient(to right, #a4daeb, #a2eef193);
}

.login-container {
  margin: 50rpx;
  border-radius: 30rpx;
  background-color: rgba(238, 238, 238, 0.486);
}

.title {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 50rpx;
}

.login-box {
  border: 1rpx solid #ccc;
  padding: 50rpx;
  border-radius: 30rpx;
  box-shadow: 5px 5px 10px 0px rgba(0, 0, 0, 0.5);
}

label {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

input {
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  box-shadow: 1px 2px 5px 2px rgba(0, 0, 0, 0.5);
  /* width: 100%; */
}

.btns {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.login-btn {
  background-color: #4caf50;
  color: #fff;
  border: none;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.login-p{
  display: flex;
  align-items: center;
  font-size:14px;
  color:black;
  border-bottom: 1px solid black;
}
.login-p:hover{
  color:blue;
  border-bottom: 1px solid blue;
}

.three-line {
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.login-btnwx {
  background-color: #0d8916;
  color: #fff;
  border: none;
  border-radius: 15rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  cursor: pointer;
  margin-top: 50rpx;
  width: 100%;
}
