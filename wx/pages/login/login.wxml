<!-- login.wxml -->
<view class="page">
  <view class="title">chatAssistantAI</view>
  <view class="login-container">
  <view class="login-box">
  <label>手机号</label>
  <input placeholder="请输入手机号" bindinput="onInputPhone" />
  <label>密码</label>
  <input placeholder="请输入密码" bindinput="onInputPassword" type="password" />
  <view class="btns">
    <button size="mini" class="login-btn" bindtap="onLogin">立即登录</button>
    <p class="login-p" bindtap="onRegister">没有账号？立即注册</p>
  </view>
  <view class="three-line">一一一一一第三方登录一一一一一</view>
  <button class="login-btnwx" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">微信登录</button>
  </view>
</view>
</view>

