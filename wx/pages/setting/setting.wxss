page{
  height: 100vh;
}
.body{
  height: 100%;
  width: 100%;
}

.container{
  height: 100%;
  width: 100%;
  background: linear-gradient(to right, #82d1e9a4, #5bb3b660);
}

.main{
  /* border: 1px solid black; */
  background-color: rgba(255, 255, 255, 0.692);
  border-radius: 20rpx;
  margin:10px 10px;
  padding:0 30rpx;
  min-height: 60%;
  display: flex;
  flex-direction: column;
}

.for{
  width: 100%;
  display: flex;
  height: 70px;
  display: flex;
  align-items: center;
}

.select{
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(167, 162, 157);
}

.slider{
  display: flex;
  flex-direction: row;
  width: 70%;
}

.slider-main{
  width: 100%;
}

.bottom{
  display:flex;
  padding:10px 10px;
  margin-top:5px;
}

.bottom button{
  margin:0 5px;
}
